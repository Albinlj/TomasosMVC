@model Tomasos.Models.CartModelView

@{
    ViewData["Title"] = "View";
}
<h1>Shopping Cart</h1>
@foreach (Item item in Model.Items)
{
    <h4>@item.Dish.Name</h4>
    <h5>@item.Quantity</h5>
    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Dish.Id">Remove</a>
}
<br />

<a asp-controller="Cart" asp-action="Order">Order</a>
<p>sum: @Model.Items.Sum(i => i.Quantity * i.Dish.Price)</p>